{
  "compilerOptions": {
    "target": "es5",
    "module": "esnext",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "lib": [
      "DOM",
      "ESNext"
    ],
    "strict": true,
    "esModuleInterop": false,
    "rootDir": "./",
    "declaration": true,
    "declarationDir": "./lib",
  },
  "include": [
    "./src/**/*.ts"
  ],
  "exclude": [
    "node_modules/**",
    "./script/**"
  ]
}